<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Tranning"
        xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" x:Class="WPF_Tranning.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Name="pnlMainGrid" MouseUp="pnlMainGrid_MouseUp" Background="LightBlue">

        <StackPanel Margin="10">

            <Label FontWeight="Bold" Content="Application Options"/>
            <CheckBox  Name="cbAllFeatures" Checked="cbAllFeatures_Checked" Unchecked="cbAllFeatures_Unchecked">전체체크</CheckBox>
            <!--속성에 IsThreeState="True" 하면 체크할때 중간에 네모로 바뀜 -->
            <CheckBox Name="cbFeatureAbc" Checked="cbFeature_CheckedChanged" Unchecked="cbFeature_CheckedChanged">Enable feature ABC</CheckBox>
            <CheckBox Name="cbFeatureXyz" IsChecked="True" Checked="cbFeature_CheckedChanged" Unchecked="cbFeature_CheckedChanged">Enable feature XYZ</CheckBox>
            <CheckBox Name="cbFeatureWww" Checked="cbFeature_CheckedChanged" Unchecked="cbFeature_CheckedChanged">Enable feature WWW</CheckBox>
            <Button x:Name="button" Content="전송" Margin="0,0,662,0"/>
        </StackPanel>

        <Button Content="Click Binding" Margin="290,128,319,257" Command="{Binding TestBinding}">
            <dxmvvm:Interaction.Behaviors>
                <dxmvvm:FocusBehavior/>

            </dxmvvm:Interaction.Behaviors>
        </Button>

        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="72">
            Hello, WPF!
        </TextBlock>

        <Button Margin="290,61,340,310">
            <Button.FontWeight>Bold</Button.FontWeight>
            <!--이런식으로도 프로퍼티 옵션 쌉가능-->
            <Button.Content>A button</Button.Content>
        </Button>

        <Button Margin="502,61,130,302">
            <Button.FontWeight>Bold</Button.FontWeight>
            <Button.Content>
                <WrapPanel>
                    <TextBlock Foreground="Blue">Multi</TextBlock>
                    <TextBlock Foreground="Red">Color</TextBlock>
                    <TextBlock>Button</TextBlock>
                </WrapPanel>
            </Button.Content>
        </Button>
    </Grid>
</Window>